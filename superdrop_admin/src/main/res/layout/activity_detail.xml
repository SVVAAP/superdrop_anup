<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/relative_registration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/buttonshapewhitebg"
    android:orientation="vertical"
    tools:context="com.svvaap.superdrop_admin.Detail_Activity">
    <!--*******create account**********-->

    <!--*******Full Name**********-->

    <TextView
        android:id="@+id/txtcreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/gotham"
        android:gravity="center_horizontal"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:paddingStart="15dp"
        android:text="Personal Details"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="16"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:inputType="text"
        android:hint="Full Name" />
    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="16"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:inputType="phone"
        android:hint="Phone Number" />

    <EditText
        android:id="@+id/phone_number_optioal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="16"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:inputType="phone"
        android:hint="Alternate number" />
    
    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:paddingStart="15dp"
        android:text="Restaurant Details"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Restaurent Logo"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="25px"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_menu_add" />

    <EditText
        android:id="@+id/rest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="16"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:inputType="text"
        android:hint="Restaurant Name" />
    <EditText
        android:id="@+id/rest_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="16"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:inputType="text"
        android:hint="Restaurant Place" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="16"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:inputType="textMultiLine"
        android:hint="Restaurant Address"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_veg"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="Veg" />

        <RadioButton
            android:id="@+id/rb_nonveg"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="Non Veg" />
    </RadioGroup>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/address_text"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="30dp"
        android:layout_marginEnd="15dp"
        android:text="Sign Up"
        android:textColor="@color/amber_100"
        android:textSize="20sp" />

</LinearLayout>
</ScrollView>