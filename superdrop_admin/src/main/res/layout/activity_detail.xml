<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/relative_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshapewhitebg"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="com.svvaap.superdrop_admin.Detail_Activity">
            <!--*******create account**********-->

            <!--*******Full Name**********-->

            <TextView
                android:id="@+id/txtcreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/gotham"
                android:gravity="center_horizontal"
                android:text="Create Account"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:paddingStart="15dp"
                android:text="Personal Details"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:ems="16"
                android:hint="Full Name"
                android:inputType="text"
                android:paddingHorizontal="10dp" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:ems="16"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingHorizontal="10dp" />

            <EditText
                android:id="@+id/phone_number_optioal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:ems="16"
                android:hint="Alternate number"
                android:inputType="phone"
                android:paddingHorizontal="10dp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:paddingStart="15dp"
                android:text="Restaurant Details"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Restaurent Logo"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/rest_profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="25px"
                android:src="@android:drawable/ic_menu_add" />

            <EditText
                android:id="@+id/rest_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:ems="16"
                android:hint="Restaurant Name"
                android:inputType="text"
                android:paddingHorizontal="10dp" />

            <EditText
                android:id="@+id/rest_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:ems="16"
                android:hint="Restaurant Place"
                android:inputType="text"
                android:paddingHorizontal="10dp" />

            <EditText
                android:id="@+id/rest_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:ems="16"
                android:hint="Restaurant Address"
                android:inputType="textMultiLine"
                android:paddingHorizontal="10dp" />


            <RadioGroup
                android:id="@+id/restaurant_type_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingTop="15dp"
                    android:text="Type:"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/rb_veg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="Veg" />

                <RadioButton
                    android:id="@+id/rb_nonveg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Non Veg" />
            </RadioGroup>

            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/address_text"
                android:layout_gravity="center"
                android:layout_marginVertical="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="Sign Up"
                android:textColor="@color/amber_100"
                android:textSize="20sp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/detail_progressBar"
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#63605F5F"
            android:padding="150dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>