<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" /> <!-- Semi-transparent black color for the shadow -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Main content layer with curved background -->
    <item
        android:left="0dp"
        android:top="4dp"
        android:right="0dp"
        android:bottom="0dp">

        <shape android:shape="rectangle">
            <solid android:color="#FF1976D2" /> <!-- Background color -->
            <corners android:radius="20dp" /> <!-- Adjust the corner radius for curvature -->
        </shape>
    </item>

</layer-list>
